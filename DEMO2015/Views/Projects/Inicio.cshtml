<link rel="stylesheet" href="/Content/bootstrap.css">

<div class="container" style="margin-top: 50px;">

    <div class="row">

        <div class="col-md-6 col-md-offset-3">

            <form method="post" action="/Projects/Guardar">
                <div class="form-group">
                    <label>Nombres</label>
                    <input type="text" class="form-control" placeholder="Nombre" name="name">
                </div>
                <div class="form-group">
                    <label>Apellidos</label>
                    <input type="text" class="form-control" placeholder="Apellido" name="lastname" />
                </div>
                <div class="form-group">
                    <label>Edad</label>
                    <input type="text" class="form-control" placeholder="Edad" name="age" />
                </div>
                <div class="form-group">
                    <label>Sexo</label>
                    <select class="form-control" name="gender">
                        <option value="M">Masculino</option>
                        <option value="F">Femenino</option>
                        <option value="O">Otros</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Comentarios</label>
                    <textarea name="comments" class="form-control" cols="50" rows="5"></textarea>

                </div>

                <div>
                    <button class="btn btn-primary pull-right">Enviar</button>
                </div>
            </form>

        </div>

    </div>

</div>